@page
@model IndexModel

@{
    ViewData["Title"] = "TwitchBot";
}
<div>
    <h2>Enter twitch.tv bot information</h2>
</div>
<div asp-validation-summary="All" style="color:red"></div>
<form method="post" asp-action="StartBot">
    <div class="form-row">

        <div class="form-group">
            <label asp-for="BotUserName"></label>
            <input class="form-control" asp-for="BotUserName" />
        </div>
        <div class="form-group">
            <label asp-for="OAuthToken"></label>
            <input class="form-control" asp-for="OAuthToken" />
            <small class="text-muted">visit https://dev.twitch.tv/docs/authentication/ to get a token for your bot </small>
        </div>
        <div class="form-group">
            <label asp-for="ChannelName"></label>
            <input class="form-control" asp-for="ChannelName" />
        </div>

        <input type="submit" value="StartBot" class="btn btn-success" />
    </div>

</form>


